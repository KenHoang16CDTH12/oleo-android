<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5">
  
  <androidx.cardview.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/cardViewReceiveMessage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dp_10"
      app:cardCornerRadius="@dimen/dp_10"
      app:layout_constraintBottom_toBottomOf="@id/imageReceiveMessage"
      app:layout_constraintStart_toEndOf="@id/imageReceiveMessage"
      app:layout_constraintTop_toTopOf="parent">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorDefault">
      
      <TextView
          android:id="@+id/textReceiveMessage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="none"
          android:maxWidth="@dimen/dp_200"
          android:minLines="1"
          android:paddingEnd="@dimen/dp_5"
          android:paddingStart="@dimen/dp_5"
          android:paddingTop="@dimen/dp_10"
          android:scrollHorizontally="false"
          android:textColor="@android:color/black"
          android:textSize="@dimen/sp_16"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>
      
      <TextView
          android:id="@+id/textReceiveTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/dp_5"
          android:layout_marginTop="@dimen/dp_5"
          android:ellipsize="end"
          android:maxLines="1"
          android:maxWidth="@dimen/dp_200"
          android:paddingEnd="@dimen/dp_5"
          android:paddingStart="@dimen/dp_5"
          android:scrollHorizontally="false"
          android:textColor="@color/colorGrey400"
          android:textSize="@dimen/sp_10"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/textReceiveMessage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
  
  <ImageView
      android:id="@+id/imageReceiveMessage"
      android:layout_width="@dimen/dp_32"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_height="@dimen/dp_32"
      android:layout_marginStart="@dimen/dp_10"
      android:src="@drawable/ic_user_circle"
      app:layout_constraintBottom_toBottomOf="@id/cardViewReceiveMessage"
      app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
